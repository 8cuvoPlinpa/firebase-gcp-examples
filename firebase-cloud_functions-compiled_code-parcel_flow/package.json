{
  "name": "parcel-flow",
  "description": "compile JavaScript w Flow via ParcelJS",
  "version": "1.0.0",
  "main": "dist/index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "watch": "parcel src/index.js --out-dir 'dist' --target node",
    "serve": "yarn watch & yarn firebase serve --only functions",
    "predeploy": "parcel build src/index.js --out-dir 'dist' --target node --detailed-report",
    "deploy": "yarn firebase deploy --only functions"
  },
  "dependencies": {
    "firebase-admin": "^6.2.0",
    "firebase-functions": "^2.1.0"
  },
  "devDependencies": {
    "firebase-tools": "^6.1.1",
    "parcel-bundler": "^1.10.3"
  },
  "engines": {
    "node": "6"
  }
}
